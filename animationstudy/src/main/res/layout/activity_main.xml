<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.assassin.anim.MainActivity">
   <android.support.v7.widget.CardView
       style="@style/CardViewCompat"
       android:layout_width="match_parent"
       android:layout_height="50dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text="哈哈哒"/>
   </android.support.v7.widget.CardView>
   
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:elevation="8dp"
       android:background="@drawable/bottom_eva"></LinearLayout>

   <Button
       android:layout_width="200dp"
       android:layout_height="50dp"
       android:id="@+id/btnAnim"
       android:text="测试动画"/>
   
   <FrameLayout
       android:id="@+id/flAnimation"
       android:layout_marginTop="20dp"
       android:layout_width="300dp"
       android:background="@color/colorAccent"
       android:layout_height="200dp"/>
   
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/btnAnimaTest"
       android:text="自动移动化"/>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/btnEnterExit"
       android:text="进入出去动画"/>
</LinearLayout>
