<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

  <!--  <item name="cardUseCompatPadding">@bool/cardUseCompatPadding</item>
    <item name="cardPreventCornerOverlap">@bool/cardPreventCornerOverlap</item>-->
    <style name="CardViewCompat" parent="CardView.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

</resources>
